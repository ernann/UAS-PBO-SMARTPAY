<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/13"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.Transfer.PembayaranController"
            prefWidth="400"
            prefHeight="700"
            style="-fx-background-color: #c6e2ffff;">

    <children>
        <ScrollPane fitToWidth="true"
                    hbarPolicy="NEVER"
                    vbarPolicy="NEVER"
                    style="-fx-background: transparent;
                           -fx-background-color: transparent;">
            <content>
                <VBox spacing="20"
                      prefWidth="400"
                      alignment="TOP_CENTER"
                      style="-fx-padding: 20;">
                    
                    <!-- Header -->
                    <HBox alignment="CENTER_LEFT" prefWidth="360">
                        <Button text="Kembali"
                                onAction="#handleBack"
                                style="-fx-background-color: #1f5bb4ff; 
                                       -fx-text-fill: #b6d3ffff;
                                       -fx-font-size: 15px;
                                       -fx-background-radius: 15;
                                       -fx-padding: 6 12;
                                       -fx-cursor: hand;"
                                prefWidth="80" />
                        <Region HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Judul -->
                    <VBox alignment="CENTER" spacing="5">
                        <Label text="Transfer"
                               style="-fx-font-size: 28px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #0B2A72;" />
                        <Label text="Pilih penerima atau tambah baru"
                               style="-fx-font-size: 14px;
                                      -fx-text-fill: #1f5bb4ff;" />
                    </VBox>

                    <!-- Tombol Penerima Baru -->
                    <VBox alignment="CENTER" spacing="10">
                        <Button text="+ Penerima Baru"
                                onAction="#handlePenerimaBaru"
                                prefWidth="200"
                                prefHeight="40"
                                style="-fx-background-color: #1f5bb4ff;
                                       -fx-text-fill: #c4dbffff;
                                       -fx-font-size: 18px;
                                       -fx-font-weight: bold;
                                       -fx-background-radius: 12;
                                       -fx-cursor: hand;
                                       -fx-effect: dropshadow(gaussian, rgba(31, 91, 180, 0.3), 8, 0, 0, 2);" />
                    </VBox>

                    <!-- Label Riwayat -->
                    <Label text="Riwayat Penerima"
                           style="-fx-font-size: 18px;
                                  -fx-font-weight: bold;
                                  -fx-text-fill: #0B2A72;"
                           alignment="CENTER_LEFT" />

                    <!-- ListView -->
                    <ListView fx:id="listRiwayat"
                              prefHeight="250"
                              prefWidth="200"
                              style="-fx-control-inner-background: white;
                                     -fx-background-radius: 15;
                                     -fx-control-inner-background-radius: 15;
                                     -fx-border-color: #b3d9ff;
                                     -fx-border-radius: 15;
                                     -fx-border-width: 2;
                                     -fx-padding: 10;
                                     -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5" />
                        </padding>
                    </ListView>

                    <!-- Info Footer -->
                    <Label text="Pilih penerima untuk melanjutkan transfer"
                           style="-fx-font-size: 14px;
                                  -fx-text-fill: #666;
                                  -fx-font-style: italic;"
                           alignment="CENTER" />

                </VBox>
            </content>
        </ScrollPane>
    </children>

</AnchorPane>