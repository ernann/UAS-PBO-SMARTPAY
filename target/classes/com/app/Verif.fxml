<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.VerifController"
            style="-fx-background-color: #D6ECFA;">

    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding><Insets top="30" bottom="30" left="40" right="40"/></padding>

            <Label text="Verifikasi Akun"
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #002B6B;"/>

            <Label text="Masukkan kode verifikasi yang telah dikirim ke email Anda"
                   wrapText="true"
                   style="-fx-font-size: 14px; -fx-text-fill: #002B6B;"
                   maxWidth="300"/>

            <TextField fx:id="txtKodeOTP" promptText="Kode Verifikasi"
                       style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #002B6B; -fx-padding: 10 12;"
                       prefWidth="300"/>

            <Button fx:id="btnVerifikasi" text="Verifikasi" onAction="#handleVerifikasi"
                    style="-fx-background-color: #003B94; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12;"
                    prefWidth="300" prefHeight="40"/>

            <Button fx:id="btnKirimUlang" text="Kirim Ulang Kode" onAction="#handleKirimUlang"
                    style="-fx-background-color: transparent; -fx-border-color: #003B94; -fx-text-fill: #003B94; -fx-font-size: 16px; -fx-background-radius: 12; -fx-border-radius: 12;"
                    prefWidth="300" prefHeight="40"/>
        </VBox>
    </center>

</BorderPane>
