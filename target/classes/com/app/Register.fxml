<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500" prefWidth="500"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.RegisterController"
            style="-fx-background-color: #165497ff;">

    <VBox alignment="TOP_CENTER" spacing="5" 
          AnchorPane.topAnchor="20.0" AnchorPane.bottomAnchor="20.0" 
          AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">

        <HBox alignment="CENTER_LEFT" spacing="5" style="-fx-padding: 0 0 10 0;">
            <Button onAction="#handleBack"
                    prefWidth="100"
                    style="-fx-background-color: #D4EBF8;
                           -fx-background-radius: 20;
                           -fx-cursor: hand;
                           -fx-padding: 6 10 6 10;">
                <graphic>
                    <Label text="Kembali"
                           style="-fx-text-fill: #1f5bb4ff;
                                  -fx-font-size: 14px;
                                  -fx-font-weight: bold;"/>
                </graphic>
            </Button>
        </HBox>

        <Label text="Register" 
               style="-fx-text-fill: #e0ecf3ff; 
                      -fx-font-size: 36px; 
                      -fx-font-weight: bold;"/>

        <VBox spacing="15" alignment="CENTER" 
              style="-fx-background-color: #cae3ffff; 
                     -fx-background-radius: 20; 
                     -fx-padding: 25;">

            <TextField fx:id="txtNama" promptText="Nama Lengkap"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                       prefWidth="280"/>

            <TextField fx:id="txtSmartId" promptText="Smartpay ID (hanya angka)"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                       prefWidth="280"/>

            <TextField fx:id="txtEmail" promptText="Email"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                       prefWidth="280"/>

            <PasswordField fx:id="txtPassword" promptText="Password"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                           prefWidth="280"/>

            <VBox spacing="5" alignment="TOP_LEFT" prefWidth="280">
                <Text fx:id="checkLength" text="• Minimal 8 karakter" style="-fx-font-size: 12px;"/>
                <Text fx:id="checkUpper" text="• Huruf besar (A-Z)" style="-fx-font-size: 12px;"/>
                <Text fx:id="checkLower" text="• Huruf kecil (a-z)" style="-fx-font-size: 12px;"/>
                <Text fx:id="checkNumber" text="• Angka (0-9)" style="-fx-font-size: 12px;"/>
            </VBox>

            <PasswordField fx:id="txtRepeatPassword" promptText="Ulangi Password"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                           prefWidth="280"/>

            <Button fx:id="btnNext" text="Next" onAction="#handleNext"
                    style="-fx-background-color: #1f76b4ff; 
                           -fx-text-fill: #c3e6ffff; 
                           -fx-font-size: 15px; 
                           -fx-font-weight: bold; 
                           -fx-background-radius: 20;"
                    prefWidth="280" prefHeight="45">
                <padding>
                    <Insets top="10" bottom="10" left="20" right="20"/>
                </padding>
            </Button>
        </VBox>

        <Label text="Sudah punya akun? Login" 
               style="-fx-text-fill: white; -fx-font-size: 14px; -fx-opacity: 0.8;"/>
    </VBox>
</AnchorPane>
