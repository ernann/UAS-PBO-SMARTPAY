<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.RegisterController"
            style="-fx-background-color: #D6ECFA;">
    <center>
        <VBox spacing="15" alignment="CENTER">
            <padding><Insets top="30" bottom="30" left="40" right="40"/></padding>

            <!-- Judul -->
            <Label text="Register" 
                   style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #002B6B;"/>

            <!-- Input Fields -->
            <TextField fx:id="txtSmartId" promptText="Smartpay ID" prefWidth="300"
                       style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #002B6B; -fx-padding: 10 12;"/>
            <TextField fx:id="txtEmail" promptText="Email" prefWidth="300"
                       style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #002B6B; -fx-padding: 10 12;"/>
            <PasswordField fx:id="txtPassword" promptText="Password" prefWidth="300"
                           style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #002B6B; -fx-padding: 10 12;"/>

            <!-- Checklist Password -->
            <VBox spacing="5" alignment="TOP_LEFT" prefWidth="300">
                <Text fx:id="checkLength" text="• Minimal 8 karakter"/>
                <Text fx:id="checkUpper" text="• Huruf besar (A-Z)"/>
                <Text fx:id="checkLower" text="• Huruf kecil (a-z)"/>
                <Text fx:id="checkNumber" text="• Angka (0-9)"/>
            </VBox>

            <PasswordField fx:id="txtRepeatPassword" promptText="Ulangi Password" prefWidth="300"
                           style="-fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #002B6B; -fx-padding: 10 12;"/>

            <!-- Tombol Next (besar) -->
            <Button fx:id="btnNext" text="Next" onAction="#handleNext"
                    style="-fx-background-color: #003B94; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 12;"
                    prefWidth="300" prefHeight="40"/>

            <!-- Tombol Back (sama style dengan Register di Login) -->
            <Button fx:id="btnBack" text="Back" onAction="#handleBack"
                    style="-fx-background-color: transparent;-fx-border-color: #003B94; -fx-text-fill: #003B94; -fx-font-size: 16px; -fx-background-radius: 12; -fx-border-radius: 12;"
                    prefWidth="300" prefHeight="40"/>
        </VBox>
    </center>
</BorderPane>
