<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="500" prefHeight="500"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.Reminder.ReminderFormController"
            style="-fx-background-color:#b6d3ff;">

    <children>

        <VBox alignment="TOP_CENTER"
              prefHeight="140"
              spacing="18"
              style="-fx-background-color: linear-gradient(to bottom, #0d47a1, #1565c0);"
              AnchorPane.topAnchor="0"
              AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0">

            <padding>
                <Insets top="22" left="18" right="18" bottom="10"/>
            </padding>

            <children>
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <children>
                        <Button onAction="#handleBack"
                                prefWidth="100"
                                style="-fx-background-color: #DDECFF;
                                       -fx-background-radius: 20;
                                       -fx-cursor: hand;
                                       -fx-padding: 6 10 6 10;">
                            <graphic>
                                <HBox alignment="CENTER">
                                    <Label text="Kembali"
                                           style="-fx-text-fill: #0d47a1;
                                                  -fx-font-size: 14px;
                                                  -fx-font-weight: bold;"/>
                                </HBox>
                            </graphic>
                        </Button>
                    </children>
                </HBox>

                <Label text="Form Reminder"
                       style="-fx-text-fill:white;
                              -fx-font-size:26px;
                              -fx-font-weight:bold;"/>

            </children>
        </VBox>

        <VBox spacing="10"
              alignment="CENTER"
              AnchorPane.topAnchor="180"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20"
              style="-fx-background-color:#f8fbff;
                     -fx-background-radius:20;
                     -fx-border-color:#c5d9f0;
                     -fx-border-radius:20;
                     -fx-padding:20;">

            <VBox spacing="5" prefWidth="320">
                <Label text="Nama Tagihan"
                       style="-fx-text-fill:#1f5bb4; -fx-font-size:12px; -fx-font-weight:bold;"/>

                <TextField fx:id="txtJenis"
                           promptText="Contoh: Listrik, Internet, dll"
                           prefWidth="320"/>
            </VBox>

            <VBox spacing="5" prefWidth="320">
                <Label text="Nominal (Rp)"
                       style="-fx-text-fill:#1f5bb4; -fx-font-size:12px; -fx-font-weight:bold;"/>

                <TextField fx:id="txtNominal"
                           promptText="Contoh: 500000"
                           prefWidth="320"/>
            </VBox>

            <VBox spacing="5" prefWidth="320">
                <Label text="Tanggal Jatuh Tempo"
                       style="-fx-text-fill:#1f5bb4; -fx-font-size:12px; -fx-font-weight:bold;"/>
                <DatePicker fx:id="dateJatuhTempo"
                            prefWidth="320"/>
            </VBox>

            <Button text="Simpan"
                    onAction="#handleSave"
                    prefWidth="320"
                    prefHeight="40"
                    style="-fx-background-color: linear-gradient(to right,#1f5bb4,#2d6bc5);
                           -fx-text-fill:white;
                           -fx-font-size:13px;
                           -fx-font-weight:bold;
                           -fx-background-radius:12;
                           -fx-cursor:hand;"/>

        </VBox>
    </children>
</AnchorPane>
