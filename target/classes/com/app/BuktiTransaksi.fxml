<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/13"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.Transfer.BuktiTransaksiController"
      alignment="CENTER"
      spacing="25"
      prefHeight="600"
      style="-fx-background-color: #165497ff;
             -fx-padding: 20;">
    
    <VBox alignment="CENTER" spacing="15">
        <StackPane>
            <Circle radius="40" fill="#7be5f8ff" stroke="#ffffffff" strokeWidth="3"/>
            <Label text="âœ“"
                   style="-fx-font-size: 36px;
                          -fx-text-fill: #165497ff;
                          -fx-font-weight: bold;"/>
        </StackPane>
        
        <VBox alignment="CENTER" spacing="5">
            <Label text="Transaksi Berhasil!"
                   style="-fx-font-size: 24px;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;" />
            <Label text="Pembayaran telah berhasil diproses"
                   style="-fx-font-size: 13px;
                          -fx-text-fill: #cae3ffff;" />
        </VBox>
    </VBox>

    <VBox alignment="CENTER" spacing="0"
          prefWidth="320"
          style="-fx-background-color: #cae3ffff;
                 -fx-background-radius: 15;
                 -fx-effect: dropshadow(gaussian, rgba(0, 0, 0, 0.2), 10, 0.5, 0, 3);
                 -fx-padding: 20;">
        
        <VBox alignment="CENTER" spacing="10" style="-fx-padding: 0 0 15 0;">
            <Label text="BUKTI TRANSAKSI"
                   style="-fx-font-size: 16px;
                          -fx-font-weight: bold;
                          -fx-text-fill: #1f5bb4ff;" />
            <Separator prefWidth="250" style="-fx-background-color: #4c4c4cff;" />
        </VBox>
        
        <VBox spacing="12" prefWidth="280">
            
            <HBox alignment="CENTER_LEFT">
                <Label text="Nama Penerima"
                       style="-fx-text-fill: #666666;
                              -fx-font-size: 13px;
                              -fx-min-width: 120;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblNama"
                       text="-"
                       style="-fx-text-fill: #333333;
                              -fx-font-weight: bold;
                              -fx-font-size: 13px;
                              -fx-alignment: CENTER_RIGHT;" />
            </HBox>
            
            <HBox alignment="CENTER_LEFT">
                <Label text="Bank Tujuan"
                       style="-fx-text-fill: #666666;
                              -fx-font-size: 13px;
                              -fx-min-width: 120;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblBank"
                       text="-"
                       style="-fx-text-fill: #333333;
                              -fx-font-weight: bold;
                              -fx-font-size: 13px;
                              -fx-alignment: CENTER_RIGHT;" />
            </HBox>
            
            <HBox alignment="CENTER_LEFT">
                <Label text="No. Rekening"
                       style="-fx-text-fill: #666666;
                              -fx-font-size: 13px;
                              -fx-min-width: 120;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblRekening"
                       text="-"
                       style="-fx-text-fill: #333333;
                              -fx-font-weight: bold;
                              -fx-font-size: 13px;
                              -fx-alignment: CENTER_RIGHT;" />
            </HBox>
            
            <HBox alignment="CENTER_LEFT">
                <Label text="Nominal Transfer"
                       style="-fx-text-fill: #666666;
                              -fx-font-size: 13px;
                              -fx-min-width: 120;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblNominal"
                       text="Rp 0"
                       style="-fx-text-fill: #333333;
                              -fx-font-weight: bold;
                              -fx-font-size: 13px;
                              -fx-alignment: CENTER_RIGHT;" />
            </HBox>
            
            <HBox alignment="CENTER_LEFT">
                <Label text="Biaya Admin"
                       style="-fx-text-fill: #666666;
                              -fx-font-size: 13px;
                              -fx-min-width: 120;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblAdmin"
                       text="Rp 0"
                       style="-fx-text-fill: #333333;
                              -fx-font-weight: bold;
                              -fx-font-size: 13px;
                              -fx-alignment: CENTER_RIGHT;" />
            </HBox>
            
            <Separator prefWidth="250" style="-fx-background-color: #4c4c4cff;" />
            
            <HBox alignment="CENTER_LEFT">
                <Label text="TOTAL BAYAR"
                       style="-fx-text-fill: #1f5bb4ff;
                              -fx-font-weight: bold;
                              -fx-font-size: 14px;
                              -fx-min-width: 120;" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="lblTotal"
                       text="Rp 0"
                       style="-fx-text-fill: #1f5bb4ff;
                              -fx-font-weight: bold;
                              -fx-font-size: 16px;
                              -fx-alignment: CENTER_RIGHT;" />
            </HBox>
        </VBox>
        
        <VBox alignment="CENTER" style="-fx-padding: 15 0 0 0;">
            <Separator prefWidth="250" style="-fx-background-color: #4c4c4cff;" />
            <Label fx:id="lblTimestamp" 
                   style="-fx-text-fill: #999999;
                          -fx-font-size: 11px;
                          -fx-padding: 10 0 0 0;" />
        </VBox>
    </VBox>

    <VBox alignment="CENTER" spacing="8" style="-fx-padding: 15 0 0 0;">
    <Button text="Kembali"
            onAction="#handleKembali"
            prefWidth="280"
            prefHeight="42"
            style="-fx-background-color: #c6e3ffff;
                   -fx-font-size: 14px;
                   -fx-text-fill: #1f5bb4ff;
                   -fx-font-weight: bold;
                   -fx-background-radius: 18;
                   -fx-border-width: 1.5;
                   -fx-border-radius: 10;
                   -fx-cursor: hand;" />
</VBox>
</VBox>