<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/13"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.app.Transfer.RiwayatPembayaranController"
      spacing="20"
      style="-fx-background-color: #0D2B6B; -fx-padding: 20;">

    <!-- Header -->
    <HBox alignment="CENTER_LEFT">
        <Button text="Kembali"
                onAction="#handleKembali"
                style="-fx-background-color: #4A6EDB; 
                       -fx-text-fill: white;
                       -fx-background-radius: 20;"/>
    </HBox>

    <!-- Judul -->
    <Label text="PEMBAYARAN"
           style="-fx-text-fill: white;
                  -fx-font-size: 22;
                  -fx-font-weight: bold;"
           alignment="CENTER"/>

    <!-- Tombol Penerima Baru -->
    <Button text="Penerima Baru +"
            onAction="#handlePenerimaBaru"
            prefHeight="45"
            style="-fx-background-color: #CDEBFF;
                   -fx-text-fill: #0D2B6B;
                   -fx-font-size: 16;
                   -fx-font-weight: bold;
                   -fx-background-radius: 25;"/>

    <!-- Label Data Terakhir -->
    <Label text="Data Terakhir"
           style="-fx-text-fill: white;
                  -fx-font-size: 16;
                  -fx-font-weight: bold;"/>

    <!-- List Data -->
    <ListView fx:id="listView"
              prefHeight="350"
              style="-fx-background-radius: 20;
                     -fx-control-inner-background: white;"/>

</VBox>
