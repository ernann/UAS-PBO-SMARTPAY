<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx/13"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.Transfer.FormPembayaranController"
            prefWidth="500"
            prefHeight="700"
            style="-fx-background-color: #165497ff;">

    <children>
        <!-- Parent VBox -->
        <VBox spacing="0" prefWidth="400">
            
            <!-- Tombol Kembali -->
            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 20;">
                <Button onAction="#handleBack"
                        prefWidth="100"
                        style="-fx-background-color: #D4EBF8;
                               -fx-background-radius: 20;
                               -fx-cursor: hand;
                               -fx-padding: 6 10 6 10;">
                    <graphic>
                        <Label text="Kembali"
                               style="-fx-text-fill: #1f5bb4ff;
                                      -fx-font-size: 14px;
                                      -fx-font-weight: bold;"/>
                    </graphic>
                </Button>
            </HBox>
     <!-- Judul -->
                    <VBox alignment="CENTER" spacing="2" style="-fx-padding: 0 0 10 0;">
                        <Label text="Detail Transfer"
                               style="-fx-font-size: 30px;
                                      -fx-font-weight: bold;
                                      -fx-text-fill: #ffffffff;" />
                        <Label text="Isi data penerima dengan benar"
                               style="-fx-font-size: 15px;
                                      -fx-text-fill: #e7f1ffff;" />
                    </VBox>
            <!-- Container Form -->
            <VBox alignment="TOP_CENTER"
                  spacing="10"
                  style="-fx-background-color: #cae3ffff; 
                         -fx-background-radius: 30 30 0 0;"
                  prefWidth="400"
                  prefHeight="600">

                <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding: 15 20 15 20;">

                    <!-- Form Input -->
                    <VBox spacing="10" prefWidth="360" alignment="TOP_CENTER">

                        <!-- Nama Penerima -->
                        <VBox spacing="4" prefWidth="360">
                            <Label text="Nama Penerima"
                                   style="-fx-text-fill: #1f5bb4ff;
                                          -fx-font-size: 13px;
                                          -fx-font-weight: bold;" />
                            <TextField fx:id="tfNama"
                                       promptText="Masukkan nama lengkap penerima"
                                       style="-fx-background-radius: 8;
                                              -fx-border-radius: 8;
                                              -fx-border-color: #a0c4ffff;
                                              -fx-border-width: 1.5;
                                              -fx-background-color: white;
                                              -fx-padding: 10 12;
                                              -fx-font-size: 13px;
                                              -fx-pref-height: 38;" />
                        </VBox>

                        <!-- Tujuan Bank -->
                        <VBox spacing="4" prefWidth="360">
                            <Label text="Tujuan Bank"
                                   style="-fx-text-fill: #1f5bb4ff;
                                          -fx-font-size: 13px;
                                          -fx-font-weight: bold;" />
                            <ComboBox fx:id="cbBank"
                                      promptText="Pilih bank tujuan"
                                      style="-fx-background-radius: 8;
                                             -fx-border-radius: 8;
                                             -fx-border-color: #a0c4ffff;
                                             -fx-border-width: 1.5;
                                             -fx-background-color: white;
                                             -fx-padding: 0 10;
                                             -fx-font-size: 13px;
                                             -fx-pref-height: 38;" />
                        </VBox>

                        <!-- Nomor Rekening -->
                        <VBox spacing="4" prefWidth="360">
                            <Label text="Nomor Rekening"
                                   style="-fx-text-fill: #1f5bb4ff;
                                          -fx-font-size: 13px;
                                          -fx-font-weight: bold;" />
                            <TextField fx:id="tfNoRek"
                                       promptText="Masukkan nomor rekening"
                                       style="-fx-background-radius: 8;
                                              -fx-border-radius: 8;
                                              -fx-border-color: #a0c4ffff;
                                              -fx-border-width: 1.5;
                                              -fx-background-color: white;
                                              -fx-padding: 10 12;
                                              -fx-font-size: 13px;
                                              -fx-pref-height: 38;" />
                        </VBox>

                        <!-- Nominal Transfer -->
                        <VBox spacing="4" prefWidth="360">
                            <Label text="Nominal Transfer"
                                   style="-fx-text-fill: #1f5bb4ff;
                                          -fx-font-size: 13px;
                                          -fx-font-weight: bold;" />
                            <TextField fx:id="tfNominal"
                                       promptText="Masukkan nominal transfer"
                                       style="-fx-background-radius: 8;
                                              -fx-border-radius: 8;
                                              -fx-border-color: #a0c4ffff;
                                              -fx-border-width: 1.5;
                                              -fx-background-color: white;
                                              -fx-padding: 10 12;
                                              -fx-font-size: 13px;
                                              -fx-pref-height: 38;" />
                            <Label text="Minimum Rp 20.000, maksimum Rp 25.000.000"
                                   style="-fx-text-fill: #666;
                                          -fx-font-size: 11px;
                                          -fx-padding: 3 0 0 5;" />
                        </VBox>

                        <!-- Info Biaya -->
                        <VBox spacing="6" style="-fx-background-color: #e8f2ff;
                                                  -fx-background-radius: 12;
                                                  -fx-padding: 12;" prefWidth="360">
                            <HBox alignment="CENTER_LEFT">
                                <Label text="Biaya Admin" style="-fx-text-fill: #1f5bb4ff; -fx-font-size: 13px;" HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblAdmin" text="Rp 0" style="-fx-text-fill: #1f5bb4ff; -fx-font-weight: bold; -fx-font-size: 13px;" />
                            </HBox>
                            <Separator style="-fx-background-color: #a0c4ffff; -fx-padding: 2 0;" />
                            <HBox alignment="CENTER_LEFT">
                                <Label text="Total Bayar" style="-fx-text-fill: #1f5bb4ff; -fx-font-size: 15px; -fx-font-weight: bold;" HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblTotal" text="Rp 0" style="-fx-text-fill: #1f5bb4ff; -fx-font-weight: bold; -fx-font-size: 16px;" />
                            </HBox>
                        </VBox>

                    </VBox>

                    <!-- Tombol Lanjutkan -->
                    <Button text="LANJUTKAN PEMBAYARAN"
                            onAction="#handleBayar"
                            prefWidth="360"
                            prefHeight="50"
                            style="-fx-background-color: #1f5bb4ff;
                                   -fx-text-fill: white;
                                   -fx-font-size: 14px;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 15;
                                   -fx-cursor: hand;
                                   -fx-effect: dropshadow(gaussian, rgba(31, 91, 180, 0.3), 6, 0, 0, 2);" />

                </VBox>
            </VBox>

        </VBox>
    </children>
</AnchorPane>
