<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.Reminder.ReminderController"
            prefWidth="400" prefHeight="600"
            style="-fx-background-color: #D6EAF8;">

    <children>

        <VBox spacing="10" layoutX="20" layoutY="20" prefWidth="350">
        <Button text="Kembali"
                            onAction="#handleBack"
                            style="-fx-background-color: #10266F;
                                -fx-text-fill: #ffffffff;
                                -fx-padding: 6 18;
                                -fx-background-radius: 20;" />
       
            <!-- Judul Halaman -->
 <!-- Judul Halaman -->
<Label text="Reminder"
       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #0B2A72"
       alignment="CENTER"
       maxWidth="Infinity"/>

            <!-- Form Tambah Reminder -->
            <TextField fx:id="txtJenis" promptText="Nama Tagihan (contoh: Bayar Listrik PLN)"/>
            <TextField fx:id="txtNominal" promptText="Nominal (Rp)" />
            <DatePicker fx:id="dateJatuhTempo" promptText="Tanggal Jatuh Tempo" />

            <Button text="Tambah Reminder" onAction="#handleAddReminder"
                    style="-fx-background-color: #0B2A72; -fx-text-fill: white; -fx-padding: 10 20; -fx-background-radius: 10;" />

            <!-- Label Tagihan Bulan Ini -->
            <Label text="Tagihan Bulan Ini"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0B2A72;"
         />

            <!-- ListView Reminder -->
           <ListView fx:id="listReminder" prefHeight="260"
       style="
              -fx-control-inner-background: white;
              -fx-control-inner-background-radius: 15;
              -fx-padding: 8;
              -fx-background-radius: 15;
          " />


        </VBox>

    </children>

</AnchorPane>
