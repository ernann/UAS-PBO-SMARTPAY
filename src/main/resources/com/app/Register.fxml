<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.RegisterController"
            style="-fx-background-color: #165497ff;">
    
    <!-- VBox FORM -->
    <VBox alignment="CENTER" spacing="15.0" 
          AnchorPane.topAnchor="30.0" AnchorPane.bottomAnchor="30.0" 
          AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
        
        <!-- Header -->
        <Label text="Register" 
               style="-fx-text-fill: #cae3ffff; -fx-font-size: 36px; -fx-font-weight: bold;">
            <font>
                <Font name="System Bold" size="36.0" />
            </font>
        </Label>
        
        <!-- Form Register -->
        <VBox spacing="15.0" alignment="CENTER" style="-fx-background-color: #cae3ffff; -fx-background-radius: 20; -fx-padding: 25;">
            
            <!-- TAMBAHKAN FIELD NAMA -->
            <TextField fx:id="txtNama" promptText="Nama Lengkap"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                       prefWidth="280.0" />
            
            <TextField fx:id="txtSmartId" promptText="Smartpay ID (hanya angka)"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                       prefWidth="280.0" />
            
            <TextField fx:id="txtEmail" promptText="Email"
                       style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                       prefWidth="280.0" />
            
            <PasswordField fx:id="txtPassword" promptText="Password"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                           prefWidth="280.0" />
            
            <!-- Checklist Password -->
            <VBox spacing="5" alignment="TOP_LEFT" prefWidth="280">
                <Text fx:id="checkLength" text="• Minimal 8 karakter" style="-fx-font-size: 12px;"/>
                <Text fx:id="checkUpper" text="• Huruf besar (A-Z)" style="-fx-font-size: 12px;"/>
                <Text fx:id="checkLower" text="• Huruf kecil (a-z)" style="-fx-font-size: 12px;"/>
                <Text fx:id="checkNumber" text="• Angka (0-9)" style="-fx-font-size: 12px;"/>
            </VBox>
            
            <PasswordField fx:id="txtRepeatPassword" promptText="Ulangi Password"
                           style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #0d47a1; -fx-padding: 12 15; -fx-font-size: 14px;"
                           prefWidth="280.0" />
            
        <Button fx:id="btnNext" text="Next" onAction="#handleNext"
                style="
                    -fx-background-color: #1f76b4ff; 
                    -fx-text-fill: #c3e6ffff; 
                    -fx-font-size: 15px; 
                    -fx-font-weight: bold; 
                    -fx-background-radius: 20;
                "
                prefWidth="280.0" prefHeight="45.0">
            <padding>
                <Insets top="10.0" bottom="10.0" left="20.0" right="20.0" />
            </padding>
        </Button>

        </VBox>
        
        <!-- Footer -->
        <Label text="Sudah punya akun? Login" 
               style="-fx-text-fill: white; -fx-font-size: 14px; -fx-opacity: 0.8;">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Label>
        
    </VBox>
    
    <!-- Tombol Back -->
    <Button fx:id="btnBack" text="←" onAction="#handleBack"
            style="-fx-background-color: rgba(255,255,255,0.2); -fx-text-fill: white; -fx-font-size: 18px; -fx-background-radius: 20;"
            AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0"
            prefWidth="40.0" prefHeight="40.0" />
    
</AnchorPane>