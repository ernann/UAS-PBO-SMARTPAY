<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.app.RiwayatController"
      style="-fx-background-color: #f0f8ff;"
      spacing="0">
    
    <!-- HEADER DENGAN TOMBOL BACK -->
    <HBox style="-fx-background-color: linear-gradient(to right, #1a5fb4, #1a5fb4); 
                 -fx-padding: 12px 16px; 
                 -fx-border-color: #c2e0ff; 
                 -fx-border-width: 0 0 1.5px 0;" 
          alignment="CENTER" spacing="10">
        
        <!-- TOMBOL BACK -->
        <Button onAction="#handleBack"
                style="-fx-background-color: #9fd7ff; 
                       -fx-border-color: #1378b7; 
                       -fx-border-radius: 12px; 
                       -fx-background-radius: 12px; 
                       -fx-cursor: hand; 
                       -fx-padding: 8px; 
                       -fx-min-width: 40px; 
                       -fx-min-height: 40px;">
            <graphic>
                <Label text="â†" 
                       style="-fx-font-size: 18px; 
                              -fx-text-fill: #11487aff; 
                              -fx-font-weight: bold;"/>
            </graphic>
        </Button>
        
        <!-- JUDUL -->
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="labelTitle" text="ðŸ“‹ Riwayat Transaksi"
               style="-fx-font-size: 24px; 
                      -fx-font-weight: 700; 
                      -fx-text-fill: white;"/>
        <Region HBox.hgrow="ALWAYS"/>
        
        <!-- TOMBOL REFRESH DIHAPUS DARI SINI -->
        
    </HBox>

    <!-- FILTER BULAN -->
    <HBox fx:id="filterContainer"
          style="-fx-background-color: #d6e9faff; 
                 -fx-padding: 15px 20px 10px 20px; 
                 -fx-border-color: #d0e7ff; 
                 -fx-border-width: 0 0 1px 0;"
          alignment="CENTER_LEFT"
          spacing="15">
        
        <Label text="Filter Bulan:" 
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1a5fb4;"/>
        
        <ComboBox fx:id="filterComboBox" 
                  prefWidth="200"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 8px; 
                         -fx-border-color: #1a5fb4; 
                         -fx-border-radius: 8px; 
                         -fx-border-width: 1.5px; 
                         -fx-padding: 8px 12px; 
                         -fx-font-size: 14px; 
                         -fx-font-weight: 500;"/>
        
    </HBox>

    <!-- KONTEN UTAMA -->
    <ScrollPane fitToWidth="true" 
                hbarPolicy="NEVER" 
                vbarPolicy="AS_NEEDED"
                style="-fx-background-color: #f0f8ff; 
                       -fx-border-color: #f0f8ff;"
                VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="riwayatContainer" 
                  style="-fx-background-color: #f0f8ff; 
                         -fx-padding: 16px; 
                         -fx-spacing: 12px;"
                  spacing="12">
                <!-- Content akan diisi oleh controller -->
            </VBox>
        </content>
    </ScrollPane>
</VBox>