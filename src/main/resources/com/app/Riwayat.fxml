<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.app.Riwayat.controller.RiwayatController"
      style="-fx-background-color: #f0f8ff;"
      spacing="10">
    
<VBox style="-fx-background-color: linear-gradient(to right, #1a5fb4, #1a5fb4); 
             -fx-padding: 20px 20px; 
             -fx-border-color: #c2e0ff; 
             -fx-border-width: 0 0 1.5px 0;"
      spacing="5">

    <HBox alignment="CENTER_LEFT">
        <Button onAction="#handleBack"
                prefWidth="100"
                style="-fx-background-color: #f0f8ff;
                       -fx-background-radius: 20;
                       -fx-cursor: hand;
                       -fx-padding: 6 10 6 10;">
            <graphic>
                <HBox alignment="CENTER">
                    <Label text="Kembali"
                           style="-fx-text-fill: #1a5fb4;
                                  -fx-font-size: 14px;
                                  -fx-font-weight: bold;"/>
                </HBox>
            </graphic>
        </Button>
    </HBox>

    <Label fx:id="labelTitle"
           text="Riwayat Transaksi"
           style="-fx-font-size: 24px; 
                  -fx-font-weight: 700; 
                  -fx-text-fill: white;"
           alignment="CENTER"
           maxWidth="Infinity"/>
</VBox>

  <HBox fx:id="filterContainer"
      style="-fx-background-color: #d6e9faff; 
             -fx-padding: 12px 20px 5px 20px; 
             -fx-border-color: #d0e7ff; 
             -fx-border-width: 0 0 1px 0;"
      alignment="CENTER_LEFT"
      spacing="5">

        
        <Label text="Filter Bulan:" 
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1a5fb4;"/>
        
        <ComboBox fx:id="filterComboBox" 
                  prefWidth="200"
                  style="-fx-background-color: white; 
                         -fx-background-radius: 8px; 
                         -fx-border-color: #1a5fb4; 
                         -fx-border-radius: 8px; 
                         -fx-border-width: 1.5px; 
                         -fx-padding: 8px 12px; 
                         -fx-font-size: 14px; 
                         -fx-font-weight: 500;"/>
    </HBox>

    <ScrollPane fitToWidth="true" 
                hbarPolicy="NEVER" 
                vbarPolicy="AS_NEEDED"
                style="-fx-background-color: #f0f8ff; 
                       -fx-border-color: #f0f8ff;"
                VBox.vgrow="ALWAYS">
        <content>
         <VBox fx:id="riwayatContainer" 
      style="-fx-background-color: #f0f8ff; 
             -fx-padding: 8px 16px 16px 16px; 
             -fx-spacing: 16px;"
      spacing="12">
</VBox>
        </content>
    </ScrollPane>
</VBox>