<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="500" prefHeight="500"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.Reminder.ReminderListController"
            style="-fx-background-color: #0A3981;">
<HBox alignment="CENTER_LEFT"
      spacing="5"
      AnchorPane.topAnchor="20"
      AnchorPane.leftAnchor="20">

    <children>
        <Button onAction="#handleBack"
                prefWidth="100"
                style="-fx-background-color: #DDECFF;
                       -fx-background-radius: 20;
                       -fx-cursor: hand;
                       -fx-padding: 6 10 6 10;">
            <graphic>
                <HBox alignment="CENTER">
                    <Label text="Kembali"
                           style="-fx-text-fill: #0d47a1;
                                  -fx-font-size: 14px;
                                  -fx-font-weight: bold;"/>
                </HBox>
            </graphic>
        </Button>
    </children>
</HBox>


    <VBox spacing="8" alignment="CENTER"
          AnchorPane.topAnchor="60"
          AnchorPane.leftAnchor="20"
          AnchorPane.rightAnchor="20">

        <Label text="Reminder"
               style="-fx-font-size:35px; -fx-font-weight:bold; -fx-text-fill:white;"/>

        <Button text="âž• Tambah Reminder"
                onAction="#handleAdd"
                prefWidth="320"
                prefHeight="40"
                style="-fx-background-color: #DDECFF;
                       -fx-text-fill: #0d47a1;
                       -fx-font-size: 15px;
                       -fx-font-weight: bold;
                       -fx-background-radius: 12;
                       -fx-cursor: hand;"/>

        <ListView fx:id="listReminder"
                  prefHeight="500"/>
    </VBox>
</AnchorPane>
