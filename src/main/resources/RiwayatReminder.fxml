<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700.0" prefWidth="400.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.Reminder.RiwayatReminderController"
            style="-fx-background-color: #165497ff;">

    <children>
        <!-- BAGIAN ATAS - BIRU -->
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="400.0"
              style="-fx-background-color: #0d47a1;"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <padding>
                <Insets bottom="20" left="20" right="20" top="20"/>
            </padding>

            <children>
                <!-- Header dengan Tombol Kembali -->
                <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="360.0">
                    <children>
                        <!-- Tombol Kembali -->
                        <Button onAction="#handleKembali"
                                style="-fx-background-color: rgba(193, 218, 255, 0.8); 
                                       -fx-text-fill: #0d47a1;
                                       -fx-background-radius: 20;
                                       -fx-cursor: hand;
                                       -fx-padding: 5 10;"
                                prefWidth="80">
                            <graphic>
                                <HBox alignment="CENTER" spacing="5">
                                    <ImageView fitHeight="15" fitWidth="15" preserveRatio="true">
                                        <Image url="https://img.icons8.com/ios-filled/50/0d47a1/back.png"/>
                                    </ImageView>
                                    <Label text="Kembali" style="-fx-text-fill: #0d47a1; -fx-font-weight: bold;"/>
                                </HBox>
                            </graphic>
                        </Button>
                        
                        <Region HBox.hgrow="ALWAYS"/>
                        
                        <!-- Judul -->
                        <Label text="Riwayat Reminder" 
                               style="-fx-text-fill: white; 
                                      -fx-font-size: 22px; 
                                      -fx-font-weight: bold;">
                            <font>
                                <Font name="System Bold" size="22.0"/>
                            </font>
                        </Label>
                        
                        <Region HBox.hgrow="ALWAYS"/>
                        
                        <!-- Tombol Refresh -->
                        <Button onAction="#handleRefresh"
                                style="-fx-background-color: rgba(193, 218, 255, 0.8); 
                                       -fx-background-radius: 20;
                                       -fx-cursor: hand;
                                       -fx-padding: 5 5;">
                            <graphic>
                                <ImageView fitHeight="18" fitWidth="18" preserveRatio="true">
                                    <Image url="https://img.icons8.com/ios-filled/50/0d47a1/refresh.png"/>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </HBox>

                <!-- Statistik -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 15 0 0 0;">
                    <!-- Total Reminder -->
                    <VBox alignment="CENTER" spacing="5"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15);
                                 -fx-background-radius: 12;
                                 -fx-padding: 15 20;">
                        <Label text="TOTAL" 
                               style="-fx-text-fill: rgba(255, 255, 255, 0.9); 
                                      -fx-font-size: 12px;" />
                        <Label fx:id="lblTotalReminder" text="0"
                               style="-fx-text-fill: white; 
                                      -fx-font-size: 24px;
                                      -fx-font-weight: bold;" />
                    </VBox>
                    
                    <!-- Reminder Bulan Ini -->
                    <VBox alignment="CENTER" spacing="5"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15);
                                 -fx-background-radius: 12;
                                 -fx-padding: 15 20;">
                        <Label text="BULAN INI" 
                               style="-fx-text-fill: rgba(255, 255, 255, 0.9); 
                                      -fx-font-size: 12px;" />
                        <Label fx:id="lblReminderBulanIni" text="0"
                               style="-fx-text-fill: #4cd964; 
                                      -fx-font-size: 24px;
                                      -fx-font-weight: bold;" />
                    </VBox>
                    
                    <!-- Reminder Terlewat -->
                    <VBox alignment="CENTER" spacing="5"
                          style="-fx-background-color: rgba(255, 255, 255, 0.15);
                                 -fx-background-radius: 12;
                                 -fx-padding: 15 20;">
                        <Label text="TERLEWAT" 
                               style="-fx-text-fill: rgba(255, 255, 255, 0.9); 
                                      -fx-font-size: 12px;" />
                        <Label fx:id="lblReminderTerlewat" text="0"
                               style="-fx-text-fill: #ff3b30; 
                                      -fx-font-size: 24px;
                                      -fx-font-weight: bold;" />
                    </VBox>
                </HBox>

            </children>
        </VBox>

        <!-- BAGIAN BAWAH - PUTIH -->
        <VBox alignment="TOP_CENTER" layoutY="200.0" prefHeight="500.0" prefWidth="400.0"
              style="-fx-background-color: #cae3ffff; 
                     -fx-background-radius: 30 30 0 0;"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">

            <padding>
                <Insets top="25" bottom="20" left="20" right="20"/>
            </padding>

            <children>
                <!-- Tombol Aksi -->
                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 0 0 15 0;">
                    <!-- Tombol Tambah Baru -->
                    <Button text="+ Tambah Reminder"
                            onAction="#handleTambahReminder"
                            style="-fx-background-color: #1f5bb4ff; 
                                   -fx-text-fill: white; 
                                   -fx-font-size: 13px;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 15;
                                   -fx-cursor: hand;
                                   -fx-padding: 10 20;" />
                    
                    <!-- Tombol Hapus Semua -->
                    <Button text="Hapus Semua"
                            onAction="#handleHapusSemua"
                            style="-fx-background-color: #e74c3c; 
                                   -fx-text-fill: white; 
                                   -fx-font-size: 13px;
                                   -fx-font-weight: bold;
                                   -fx-background-radius: 15;
                                   -fx-cursor: hand;
                                   -fx-padding: 10 20;" />
                </HBox>
                
                <!-- Label Daftar -->
                <Label text="Semua Reminder"
                       style="-fx-text-fill: #1f5bb4ff; 
                              -fx-font-size: 16px; 
                              -fx-font-weight: bold;
                              -fx-padding: 0 0 10 0;" 
                       alignment="CENTER_LEFT" />
                
                <!-- ScrollPane untuk ListView -->
                <ScrollPane fitToWidth="true"
                          hbarPolicy="NEVER"
                          vbarPolicy="AS_NEEDED"
                          style="-fx-background: transparent;
                                 -fx-background-color: transparent;">
                    <content>
                        <ListView fx:id="listRiwayat" 
                                  prefHeight="350"
                                  prefWidth="360"
                                  style="-fx-background-color: transparent;
                                         -fx-control-inner-background: transparent;">
                            <padding>
                                <Insets top="5" right="5" bottom="5" left="5"/>
                            </padding>
                        </ListView>
                    </content>
                </ScrollPane>
                
                <!-- Pesan Kosong -->
                <VBox alignment="CENTER" spacing="10" fx:id="boxKosong"
                      style="-fx-padding: 40 0;">
                    <ImageView fitHeight="80" fitWidth="80" preserveRatio="true">
                        <Image url="https://img.icons8.com/ios/100/cae3ff/empty-box.png"/>
                    </ImageView>
                    <Label text="Belum ada reminder" 
                           style="-fx-text-fill: #999; 
                                  -fx-font-size: 14px;" />
                    <Button text="Tambah Reminder Pertama"
                            onAction="#handleTambahReminder"
                            style="-fx-background-color: #1f5bb4ff; 
                                   -fx-text-fill: white; 
                                   -fx-font-size: 12px;
                                   -fx-background-radius: 10;
                                   -fx-cursor: hand;
                                   -fx-padding: 8 15;" />
                </VBox>
                
                <!-- Footer Info -->
                <Label text="Geser ke kiri/kanan untuk melihat detail"
                       style="-fx-text-fill: #666; 
                              -fx-font-size: 11px;
                              -fx-font-style: italic;
                              -fx-padding: 10 0 0 0;" 
                       alignment="CENTER" />
                
            </children>
        </VBox>
    </children>
</AnchorPane>